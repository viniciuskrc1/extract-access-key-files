{
  "name": "extract-access-key",
  "version": "1.0.0",
  "description": "Extrator de Chaves de Acesso de arquivos PDF",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-packager . ExtractAccessKey --platform=win32 --arch=x64 --out=dist --overwrite --ignore=\"node_modules/electron-builder|.git|dist|README.md\"",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "pdf",
    "nfe",
    "chave-acesso",
    "extractor"
  ],
  "author": "ExtractAccessKey",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "pdf-parse": "^1.1.1"
  },
  "build": {
    "appId": "com.extractaccesskey.app",
    "productName": "ExtractAccessKey",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "sign": null,
      "signingHashAlgorithms": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
